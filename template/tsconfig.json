{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ES6",
      "ES7",
      "ES2016",
      "ES2017",
      "ESNext"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "incremental": true,
    "esModuleInterop": true,
    "noEmit": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleSuffixes": [".weapp", ".aliapp", ""],
    "paths": {
      "*": ["node_modules/*", "local_modules/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types", "local_modules/"]
  },
  "exclude": [
    "local_modules",
    "node_modules",
    "src/**/*.wxs"
  ],
  "include": [
    "src/**/*"
  ]
}